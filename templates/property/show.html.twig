{% extends 'base.html.twig' %}

{% block subTitle %}{{ 'title.property' | trans }}{% endblock %}

{% block bc_content %}
    <twig:breadcrumb:BreadcrumbElement
            label="title.property"
            icon="<i class='fas fa-building'></i>"
            path="{{ path('user_property_index') }}"
    />
    <twig:breadcrumb:BreadcrumbElement
            label="form.action.show"
    />
    <twig:breadcrumb:BreadcrumbElement
            label="{{ property.name }}"
            active="1"
    />
{% endblock %}

{% block body %}
    <h1 class="text-center">{{ property.name }}</h1>
    <div class="text-center">
        <small>{{ property.address }}</small>
    </div>
    <hr>
    <h2 class="text-center">{{ 'title.leases' | trans }}</h2>
    <div class="row justify-content-center">
        {% for lease in property.leases %}
            <twig:Lease lease="{{ lease }}"/>
        {% endfor %}
        <twig:card:LeaseAdd id="{{ property.id }}"/>
    </div>
{% endblock %}
