{% extends 'base.html.twig' %}

{% block subTitle %}{{ 'title.lease' | trans }}{% endblock %}

{% block bc_content %}
    <twig:breadcrumb:BreadcrumbElement
            label="title.property"
            icon="<i class='fas fa-building'></i>"
            path="{{ path('user_property_index') }}"
    />
    <twig:breadcrumb:BreadcrumbElement
            label="{{ lease.property.name }}"
            path="{{ path('user_property_show', {id: lease.property.id}) }}"
    />
    <twig:breadcrumb:BreadcrumbElement
            label="title.lease"
            icon="<i class='fas fa-file-contract'></i>"
    />
    <twig:breadcrumb:BreadcrumbElement
            label="{{ lease.startedAt | date('Y') }}"
            active="1"
    />
{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-10">
            <div class="row">
                <div class="col">
                    <div class="row mb-3">
                        <label class="fw-bold" for="tenant">{{ 'lease.tenant' | trans }}</label>
                        <div id="tenant" class="col-7">{{ lease.tenant }}</div>
                    </div>
                </div>
                <div class="col">
                    <div class="row mb-3">
                        <label for="rent" class="fw-bold">{{ 'lease.rent' | trans }}</label>
                        <div id="rent" class="col-7">{{ lease.rent }}</div>
                    </div>
                </div>
                <div class="col">
                    <div class="row mb-3">
                        <label for="charge" class="fw-bold">{{ 'lease.charge' | trans }}</label>
                        <div id="charge" class="col-7">{{ lease.charge }}</div>
                    </div>
                </div>
                <div class="col">
                    <div class="row mb-3">
                        <label for="startedAt" class="fw-bold">{{ 'lease.startedAt' | trans }}</label>
                        <div id="startedAt" class="col-7">{{ lease.startedAt | date('d/m/Y') }}</div>
                    </div>
                </div>
                <div class="col">
                    <div class="row mb-3">
                        <label for="endedAt" class="fw-bold">{{ 'lease.endedAt' | trans }}</label>
                        <div id="endedAt" class="col-7">{{ lease.endedAt ? (lease.endedAt | date('d/mY')) : '' }}</div>
                    </div>
                </div>
                <div class="col">
                    <div class="row mb-3">
                        <label for="endedAt" class="fw-bold">{{ 'lease.paymentDay' | trans }}</label>
                        <div id="endedAt" class="col-7">{{ lease.paymentDay }}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <div class="row justify-content-center">
        {% for payment in lease.payments %}
            <twig:Payment payment="{{ payment }}"/>
        {% endfor %}
        <twig:card:PaymentAdd id="{{ lease.id }}"/>
    </div>

{% endblock %}



