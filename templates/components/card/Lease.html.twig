<div class="card m-3 property{{ endedAt is same as '' ? ' bg-primary' : '' }}" >
    <div class="card-body text-center">
        <h5 class="card-title">{{ tenant }}</h5>
        <div class="row">
            <div class="col-6 fw-bold">{{ 'lease.startedAt' | trans }}:</div>
            <div class="col-6 ">{{ startedAt }}:</div>
        </div>
        <div class="row mb-3">
            <div class="col-6 fw-bold">{{ 'lease.endedAt' | trans }}:</div>
            <div class="col-6 ">{{ endedAt }}:</div>
        </div>
        {% if endedAt is same as '' %}
            <div class="row justify-content-between">
                <div class="col-2">
                    <a href="{{ path('user_lease_end', {id: id}) }}" class="card-link"><i class="fas fa-times-circle"></i></a>
                </div>
                <div class="col-2">
                    <a href="{{ path('user_lease_invoice', {id: id}) }}" class="card-link"><i class="fas fa-file-invoice-dollar"></i></a>
                </div>
            </div>
        {% endif %}
    </div>
</div>
